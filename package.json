{
  "name": "mortage-visualizer",
  "version": "0.0.1",
  "description": "Personal project for trying out TypeScript, Redux, NodeJs etc.",
  "main": "src/app.ts",
  "scripts": {
    "setup": "yarn install",
    "build:client": "yarn run banner build-client && cd client && yarn run build",
    "build:app": "yarn run build:client && yarn run build:server",
    "serve": "yarn run banner serve && \"./node_modules/.bin/nodemon\" --watch src --watch .env",
    "build:server": "yarn run banner build-server && yarn run lint && yarn run clean:dist && yarn run transpile && yarn run copy:assets",
    "start": "node dist/app.js",
    "pipeline": "yarn run build:app && yarn run start",
    "heroku-prebuild": "yarn run build:app",
    "asd": "\"./node_modules/.bin/jest\" --testPathPattern=unit",
    "pretest": "./node_modules/.bin/tslint -c ./tslint.json -t stylish './test/unit/**/*.ts'",
    "test": "yarn run banner test && cross-env NODE_ENV=test \"./node_modules/.bin/jest\" --testPathPattern=unit",
    "test:pretty": "npm run test -- --verbose",
    "test:coverage": "npm run test -- --coverage",
    "lint": "./node_modules/.bin/tslint -c ./tslint.json -p tsconfig.json 'src/**/*.ts' --format stylish",
    "transpile": "./node_modules/.bin/tsc",
    "clean": "yarn run banner clean && yarn run clean:dist",
    "clean:dist": "./node_modules/.bin/trash './dist'",
    "copy:client": "./node_modules/.bin/copyup -f ./client/dist/* ./dist/client",
    "copy:assets": "yarn run copy:swagger && yarn run copy:public",
    "copy:swagger": "./node_modules/.bin/copyup ./src/api/swagger.json ./dist",
    "copy:public": "./node_modules/.bin/copyup ./src/public/* ./dist",
    "banner": "yarn run ts-node:fast -- ./src/console/lib/banner.ts",
    "ts-node": "./node_modules/.bin/ts-node",
    "ts-node:fast": "./node_modules/.bin/ts-node -F"
  },
  "repository": "git+ssh://git@github.com/jahast/mortage-visualizer.git",
  "engines": {
    "node": "^7.7.3"
  },
  "keywords": [
    "NodeJS",
    "TypeScript",
    "express"
  ],
  "dependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/body-parser": "^1.16.5",
    "@types/bookshelf": "^0.9.6",
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.9.2",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/faker": "^4.1.1",
    "@types/glob": "^5.0.32",
    "@types/handlebars": "^4.0.36",
    "@types/helmet": "0.0.35",
    "@types/inquirer": "0.0.35",
    "@types/jest": "^20.0.8",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/knex": "0.0.52",
    "@types/lodash": "^4.14.74",
    "@types/morgan": "^1.7.32",
    "@types/pluralize": "0.0.27",
    "@types/reflect-metadata": "0.0.5",
    "@types/request": "0.0.45",
    "@types/request-promise": "^4.1.37",
    "@types/serve-favicon": "^2.2.29",
    "@types/winston": "^2.3.5",
    "body-parser": "^1.17.2",
    "chalk": "^2.1.0",
    "class-validator": "^0.7.2",
    "commander": "^2.11.0",
    "compression": "^1.7.0",
    "copyfiles": "^1.2.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "express-status-monitor": "^0.1.9",
    "figlet": "^1.2.0",
    "glob": "^7.1.2",
    "handlebars": "^4.0.10",
    "helmet": "^3.8.1",
    "inquirer": "^3.2.3",
    "inversify": "^4.3.0",
    "inversify-express-utils": "^4.0.1",
    "jsonwebtoken": "^7.4.3",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "mysql": "^2.14.1",
    "nodemon": "^1.12.0",
    "path": "^0.12.7",
    "pluralize": "^5.1.0",
    "reflect-metadata": "^0.1.10",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "serve-favicon": "^2.4.3",
    "swagger-jsdoc": "^1.9.7",
    "swagger-ui-express": "^2.0.7",
    "trash-cli": "^1.4.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "winston": "^2.3.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/test/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./test/unit/lib/setup.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^5.0.5",
    "jest": "^20.0.3",
    "jest-cli": "^21.0.1",
    "ts-jest": "^20.0.7",
    "webpack": "^3.3.0"
  }
}
